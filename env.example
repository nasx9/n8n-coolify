# ===== Núcleo / HTTP =====
N8N_HOST=n8n.aceleraempresasenegocios.com.br
N8N_PROTOCOL=https
N8N_PORT=5678
WEBHOOK_URL=https://n8n.aceleraempresasenegocios.com.br/
N8N_ENCRYPTION_KEY=coloque_uma_chave_bem_grande_unica
N8N_SECURE_COOKIE=true
N8N_LOG_LEVEL=info
NODE_OPTIONS=--max-old-space-size=2048
GENERIC_TIMEZONE=America/Sao_Paulo

# ===== Autenticação básica (painel do n8n) =====
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=Ac@147852

# ===== Banco (use Postgres) =====
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres              # substitua pelo host real do recurso no Coolify
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=senha_db

# ===== Execuções em fila (Redis) =====
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_HOST=redis             # substitua pelo host real do recurso no Coolify
QUEUE_BULL_REDIS_PORT=6379
#QUEUE_BULL_REDIS_PASSWORD=se_usar_senha

# ===== Telemetria =====
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false

